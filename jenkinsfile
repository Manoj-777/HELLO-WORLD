pipeline {
  agent none  // define agents per stage

  stages {
    stage('Build Java App') {
      agent {
        docker { image 'maven:3.9.8-eclipse-temurin-17' }
      }
      steps {
        sh 'mvn --version'
        sh 'mvn clean package'
      }
    }

    stage('Run App') {
      agent {
        docker { image 'eclipse-temurin:17-jdk' }
      }
      steps {
        sh 'java -jar target/my-java-app-1.0-SNAPSHOT.jar'
      }
    }
  }
}
